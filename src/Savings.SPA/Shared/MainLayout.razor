@using Microsoft.AspNetCore.Components.WebAssembly.Authentication;
@inherits LayoutComponentBase
@inject IJSRuntime JS

<RadzenDialog />
<RadzenNotification />
<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <article class="content px-4">
            <ErrorBoundary>
                <ChildContent>
                    @Body
                </ChildContent>
                <ErrorContent Context="ex">

                    @{
                        if (ex.GetType().IsAssignableFrom(typeof(AccessTokenNotAvailableException)))
                        {
                            JS.InvokeVoidAsync("localStorage.clear");
                            <RedirectToLogin />
                        }
                    }
                </ErrorContent>
            </ErrorBoundary>
        </article>
    </main>
</div>
